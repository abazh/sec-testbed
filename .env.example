# Security Testbed Configuration
# Copy to .env and customize as needed

# Network Configuration
TESTBED_SUBNET=100.64.0.0/24
TESTBED_GATEWAY=100.64.0.1
OVS_BRIDGE_NAME=ovs-br0

# Container IPs
ATTACKER_IP=100.64.0.10
VICTIM_IP=100.64.0.20
MONITOR_IP=100.64.0.30

# Resource Limits
ATTACKER_CPU_LIMIT=1.0
ATTACKER_MEMORY_LIMIT=1G
VICTIM_CPU_LIMIT=2.0
VICTIM_MEMORY_LIMIT=2G
MONITOR_CPU_LIMIT=1.0
MONITOR_MEMORY_LIMIT=1G

# MySQL Configuration
MYSQL_ROOT_PASSWORD=vulnerable123
WP_DATABASE=wordpress
WP_USER=wpuser
WP_PASSWORD=wppass

# WordPress Configuration
WP_URL=http://victim/wordpress
WP_TITLE=Security Testbed Victim
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=admin
WP_ADMIN_EMAIL=admin@example.com

# Monitoring Configuration
CAPTURE_INTERFACE=eth0
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=7

# Security Settings (DO NOT CHANGE IN PRODUCTION)
SECURITY_MODE=research
ENABLE_VULNERABLE_SERVICES=true

# OVS Configuration Timeouts (in seconds)
TESTBED_CONTAINER_TIMEOUT=60
TESTBED_CONNECTIVITY_TIMEOUT=2
TESTBED_HEALTH_INTERVAL=60